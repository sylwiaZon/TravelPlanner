<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newTravel.NewTravelFragment">

    <LinearLayout
        android:id="@+id/new_travel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan your new travel!"
            android:layout_marginBottom="20dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/teal_700"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where would you like to go?"
            android:layout_marginRight="5dp"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Select location:"
                android:gravity="right"
                android:textAppearance="?attr/textAppearanceBody1" />

            <EditText
                android:id="@+id/new_travel_location"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="City name"
                android:layout_marginRight="10dp"
                android:inputType="text" />

            <Button
                android:id="@+id/new_travel_location_search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When would you like it to start?"
            android:layout_marginRight="10dp"
            android:textAppearance="?attr/textAppearanceBody1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select date:"
                android:layout_marginRight="10dp"
                android:textAppearance="?attr/textAppearanceBody1"/>

            <TextView
                android:id="@+id/new_travel_start_date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="Date"
                android:textAppearance="?attr/textAppearanceBody1" />
            <Button
                android:id="@+id/new_travel_start_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Set date" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When would you like it to end?"
            android:layout_marginRight="10dp"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select date:"
                android:layout_marginRight="10dp"
                android:textAppearance="?attr/textAppearanceBody1"/>

            <TextView
                android:id="@+id/new_travel_end_date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="Date"
                android:textAppearance="?attr/textAppearanceBody1" />
            <Button
                android:id="@+id/new_travel_end_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Set date" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who is coming with you?"
            android:layout_marginRight="10dp"
            android:textAppearance="?attr/textAppearanceBody1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adults:"
                android:layout_marginRight="10dp"
                android:textAppearance="?attr/textAppearanceBody1"/>

            <EditText
                android:id="@+id/create_travel_adults"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="eg. 2"
                android:inputType="text"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children:"
                android:layout_marginRight="10dp"
                android:textAppearance="?attr/textAppearanceBody1"/>

            <EditText
                android:id="@+id/create_travel_children"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="eg. 1"
                android:inputType="text"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children ages:"
                android:layout_marginRight="10dp"
                android:textAppearance="?attr/textAppearanceBody1"/>

            <EditText
                android:id="@+id/create_travel_children_ages"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="eg. 2,10"
                android:inputType="text"/>

        </LinearLayout>
        <Button
            android:id="@+id/create_travel_add_travel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your new travel!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>